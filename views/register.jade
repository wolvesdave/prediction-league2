extends layout

block content
  .container
    include navbar.jade
    h1 Register Page
    p.lead Welcome to the English Premier League Prediction League!
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
          input.form-control(type='text', name="fullname", placeholder='Enter Full Name')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        input.form-control(type='email', name="email", placeholder='email@domain.com')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
